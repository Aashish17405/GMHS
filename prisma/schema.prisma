generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  PARENT
}

enum ComplaintStatus {
  PENDING
  IN_PROGRESS
  RESOLVED
}

enum ComplaintType {
  ACADEMIC_PERFORMANCE
  BEHAVIORAL_ISSUES
  ATTENDANCE
  HOMEWORK_ISSUES
  COMMUNICATION
  OTHER
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // hashed password
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  studentsAsParent Student[] @relation("ParentStudents")
  studentsAsTeacher Student[] @relation("TeacherStudents")
  actions           Action[]  @relation("TeacherActions")
  complaintsAsParent Complaint[] @relation("ParentComplaints")
  complaintsAsTeacher Complaint[] @relation("TeacherComplaints")
}

model Student {
  id        String   @id @default(uuid())
  name      String
  className String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  parent   User   @relation("ParentStudents", fields: [parentId], references: [id])
  parentId String

  teacher   User?   @relation("TeacherStudents", fields: [teacherId], references: [id])
  teacherId String?

  actions Action[]
  complaints Complaint[]
}

model Action {
  id          String   @id @default(uuid())
  description String
  createdAt   DateTime @default(now())

  // Relations
  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  teacher   User    @relation("TeacherActions", fields: [teacherId], references: [id])
  teacherId String
}

model Complaint {
  id          String          @id @default(uuid())
  title       String
  description String
  type        ComplaintType
  status      ComplaintStatus @default(PENDING)
  resolution  String?         // Actions taken by teacher
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  resolvedAt  DateTime?

  // Relations
  student   Student @relation(fields: [studentId], references: [id])
  studentId String

  parent    User    @relation("ParentComplaints", fields: [parentId], references: [id])
  parentId  String

  teacher   User?   @relation("TeacherComplaints", fields: [teacherId], references: [id])
  teacherId String?
}
